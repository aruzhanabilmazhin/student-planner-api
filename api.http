@baseUrl = http://localhost:3000
@token =
@userId =
@taskId =

##############################
# AUTHENTICATION
##############################

### REGISTER USER
POST {{baseUrl}}/users/register
Content-Type: application/json

{
  "email": "testuser@example.com",
  "password": "12345",
  "firstName": "Test",
  "lastName": "User",
  "role": "student"
}

# После этого запроса:
# token → вставь в @token
# userId → вставь в @userId

### LOGIN USER
POST {{baseUrl}}/users/login
Content-Type: application/json

{
  "email": "testuser@example.com",
  "password": "12345"
}

# После этого запроса:
# token → вставь в @token
# userId → вставь в @userId

##############################
# USERS (Protected routes)
##############################

### GET ALL USERS
GET {{baseUrl}}/users
Authorization: Bearer {{token}}
Accept: application/json

### GET SINGLE USER
GET {{baseUrl}}/users/{{userId}}
Authorization: Bearer {{token}}
Accept: application/json

### CREATE USER
POST {{baseUrl}}/users
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "firstName": "Another",
  "lastName": "User",
  "email": "another@example.com",
  "password": "54321",
  "role": "teacher"
}

### UPDATE USER
PUT {{baseUrl}}/users/{{userId}}
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "role": "teacher"
}

### DELETE USER
DELETE {{baseUrl}}/users/{{userId}}
Authorization: Bearer {{token}}

##############################
# TASKS (Protected routes)
##############################

### GET ALL TASKS
GET {{baseUrl}}/tasks
Authorization: Bearer {{token}}
Accept: application/json

### GET SINGLE TASK
GET {{baseUrl}}/tasks/{{taskId}}
Authorization: Bearer {{token}}
Accept: application/json

### CREATE TASK
POST {{baseUrl}}/tasks
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Bring the book",
  "description": "Math exercises",
  "status": "pending",
  "priority": 2,
  "userId": "{{userId}}",
  "dueDate": "2026-02-01T12:00:00.000Z"
}

# После создания задачи:
# taskId → вставь в @taskId

### UPDATE TASK
PUT {{baseUrl}}/tasks/{{taskId}}
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "status": "completed",
  "priority": 3
}

### DELETE TASK
DELETE {{baseUrl}}/tasks/{{taskId}}
Authorization: Bearer {{token}}
